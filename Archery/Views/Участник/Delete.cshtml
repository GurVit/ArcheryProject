@model Archery.Models.Участник

@{
    ViewBag.Title = "Удалить участника";
}

<h2>Удалить запись об участнике</h2>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Участник</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ФИО")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ФИО)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
