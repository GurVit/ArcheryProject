@model Archery.Models.Участник
@{
    ViewBag.Title = "Информация об участнике";
}

<h2>Информация об участнике</h2>

<div>
    <h4>Участники</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ФИО")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ФИО)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Дата прихода")
            </th>
            <th>
                @Html.DisplayName("Дата ухода")
            </th>
            <th>
                @Html.DisplayName("ФИО тренера")
            </th>
            <th>
                @Html.DisplayName("Клуб")
            </th>
        </tr>

        @foreach (var item in Model.Участник_у_тренера)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_прихода)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_ухода)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Тренер.ФИО)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Тренер.Клуб.Наименование)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Назад", "Index")
</p>