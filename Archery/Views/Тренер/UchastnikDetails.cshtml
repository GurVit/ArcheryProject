@model Archery.Models.Участник

@{
    ViewBag.Title = "Сведения об учениках тренера";
}

<h2>Сведения</h2>

<div>
    <h4>Участник</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ФИО")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ФИО)
        </dd>
    </dl>
    <h4>
        @Html.DisplayName("История получения разрядов")
    </h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Дата получения")
            </th>
            <th>
                @Html.DisplayName("Разряд")
            </th>
        </tr>

        @foreach (var item in Model.История_получения_разряда)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_получения)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Спортивный_разряд.Наименование)
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Назад", "Index")
</p>
