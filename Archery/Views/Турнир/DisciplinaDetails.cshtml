@model Archery.Models.Дисциплина_в_турнире

@{
    ViewBag.Title = "DisciplinaDetails";
    string gender = "";
}

<h2>Участники дисциплины</h2>

<dl class="dl-horizontal">

    <dt>
        @Html.DisplayName("Дивизион")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Дисциплина.Дивизион.Наименование)
    </dd>

    <dt>
        @Html.DisplayName("Дистанция")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Дисциплина.Дистанция.Дистанция__м)
    </dd>

    <dt>
        @Html.DisplayName("М/Ж")
    </dt>

    <dd>
        @{
            switch (ViewBag.Gender)
            {
                case true:
                    gender = "Мужчины";
                    break;
                case false:
                    gender = "Женщины";
                    break;
            }
        }
        @gender
    </dd>
</dl>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ФИО участника")
        </th>
    </tr>


    @foreach (var item in Model.Участник_в_дисциплине_турнира)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Участник_у_тренера.Участник.ФИО)
            </td>
            <td>
                @Html.ActionLink("Показать результаты", "Results", new { id1 = Model.Мужчины_женщины, id2 = Model.Код_дивизиона, id3 = Model.Код_дистанции, id4 = Model.ID_турнира, id5 = item.ID_участника })
            </td>
            <td>
                @ViewBag.Результат
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Назад", "Details", new { id = Model.ID_турнира })
</p>
