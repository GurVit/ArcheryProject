@model Archery.Models.Дисциплина_в_турнире

@{
    ViewBag.Title = "Добавить дисциплину";
}

<h2>
    Добавить дисциплину в турнире
</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Дисциплина</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Дата_проведения, "Дата проведения дисциплины", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Дата_проведения, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Дата_проведения, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Мужчины_женщины, "Мужчины/женщины", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Мужчины_женщины, new List<SelectListItem>()
                {
                   new SelectListItem() { Text = "Мужчины", Value = "True" },
                   new SelectListItem() { Text = "Женщины", Value = "False"}
                }, null, new { @id = "Мужчины_женщины", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Мужчины_женщины, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Код_дистанции, "Дистанция", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Код_дистанции", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Код_дистанции, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Код_дивизиона, "Дивизион", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Код_дивизиона", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Код_дивизиона, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_судьи, "Судья", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_судьи", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_судьи, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @ViewBag.Message;
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Details", new { id = ViewBag.TurnirID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


